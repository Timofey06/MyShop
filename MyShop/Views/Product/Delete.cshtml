@using MyShop_Utility
@model MyShop_Models.Product

@{
    var title = "Create Product";
}



<h1 class="text-light">@title</h1>

<form method="post"  asp-action="DeletePost">

    <!-- Передача скрытых данных -->
    <input asp-for="Id" hidden />

    <p>
        <label asp-for="Name" class="text-light"></label>
        <input asp-for="Name" class="form-control" disabled/>
       
    </p>

    <p>
        <label asp-for="Price" class="text-light"></label>
        <input asp-for="Price" class="form-control" disabled/>
       
    </p>

    <p>
        <label asp-for="Description" class="text-light"></label>
        <!--<input asp-for="Product.Description" class="form-control" />-->
        <textarea asp-for="Description" class="form-control summernote" disabled></textarea>
    </p>
    <p>
        <label asp-for="ShortDescription" class="text-light"></label>
        <!--<input asp-for="Product.Description" class="form-control" />-->
        <input asp-for="ShortDescription" class="form-control " disabled>
        
    </p>
    <p>
        <label asp-for="CategoryId" class="text-light"></label>
        <input asp-for="Category.Name" class="form-control" disabled/>
    </p>
    <p>
        <label asp-for="MyModelId" class="text-light"></label>
        <input asp-for="MyModel.Name" class="form-control" disabled />
    </p>
    <p>
        
        
        <input type="submit" class="btn btn-danger" value="Delete"  />
        
       

        <a class="btn btn-primary" asp-controller="Product" asp-action="Index"> Back </a>
    </p>
</form>
@if (Model.Id != 0)
{
    <p>

        <img src="/@PathManager.ImageProductPass@Model.Image" width="100" />
    </p>
}


@section Scripts {
   
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 200
                background: light
                disable: true
            });
        });

        
    </script>

}
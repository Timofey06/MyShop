@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product";
}

<h1 class="text-light">Products</h1>


<p>
    <a class="btn btn-primary" asp-controller="Product" asp-action="CreateEdit">
        <i class="fa-solid fa-plus"></i> Create Product
    </a>
</p>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="text-light">Product Name</th>
                <th class="text-light">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%" class="text-light">@item.Name</td>
                    <td width="30%" class="text-light">@item.Price</td>

                    <td width="20%">
                        <a class="btn btn-primary" asp-controller="Product"
                   asp-action="CreateEdit"
                   asp-route-Id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                            <!-- Edit -->
                        </a>

                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete"
                   asp-route-Id="@item.Id">
                            <i class="fa-solid fa-tresh"></i>
                            <!-- Delete -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-light">No products.</p>
}

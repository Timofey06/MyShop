@using MyShop_Utility
@model MyShop_Models.ViewModels.DetailsViewModel

<form method="post" asp-action="DetailsPost" >
   
    <p>
        <h2>@Model.Product.Name</h2>
        <h2>@Model.Product.Price</h2>

    </p>
    <p>
        <img src="/@PathManager.ImageProductPass@Model.Product.Image"
    </p>
    <p>
        <h3>@Model.Product.Category.Name</h3>

    </p>
    <p>
        @Html.Raw(Model.Product.Description)
    </p>
    <p>
        <a class="btn btn-primary" asp-action="Index"> Back </a>
        @if (!Model.IsInCart)
        {
            <button asp-action="DetailsPost" type="submit" class="btn btn-primary" asp-route-id="@Model.Product.Id">
                Add to cart
            </button>

        }
        else
        {
            <a asp-action="RemoveFromCart" class="btn btn-danger" asp-route-id="@Model.Product.Id">
                remove From Cart
            </a>
        }

    </p>

</form>

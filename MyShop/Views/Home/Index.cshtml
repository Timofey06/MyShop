@model MyShop_Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div>
        <button class="btn filter-button text-light" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn filter-button text-light" data-filter="@item.Name.Replace(' ','_')">
                @item.Name
            </button>
        }
    </div>

    <div>
        @foreach (var item in Model.Products)
        {
            <partial name="_ProductCard" model="item"  />
        }
    </div>
  
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.filter-button').click(function () {
               
                var value = $(this).attr('data-filter');

                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $('.filter').not('.' + value).hide('1000');
                    $('.filter').filter('.' + value).show('1000');
                }
            });
        });

    </script>

}

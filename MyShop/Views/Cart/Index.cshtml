@model IEnumerable<Product>

<h1>Shopping Cart</h1>

<form method="post">
    <p>
        <a class="btn btn-primary" asp-controller="Home">Continue Shopping</a>
    </p>
    @foreach (var item in Model)
    {
        <p>
            <img class="rounded"src="/@PathManager.ImageProductPass@item.Image" style="width: 200px">
        </p>
        <p>
            Product Name: @item.Name
        </p>
        <p>
            Description: @item.ShortDescription
        </p>
        <p>
            Price: @item.Price
        </p>
        <p>
            <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id">Trash</a>
            
        </p>
    }
   
    <p>
       <button type="submit" class="btn btn-success"> Continue</button>
    </p>
</form>

@model MyShop.Models.ViewModels.ProductUserViewModel
<h1>Summary</h1>

<form method="post" asp-action="SummaryPost">
    <!--User-->
    <p>
        <label>Name</label>
        <input class="form-control" type="text" asp-for="@Model.ApplicationUser.FullName"/>

    </p>
    <p>
        <label>Phone</label>
        <input class="form-control" type="text" asp-for="@Model.ApplicationUser.PhoneNumber" />

    </p>
    <p>
        <label>Email</label>
        <input class="form-control" type="text" asp-for="@Model.ApplicationUser.Email" />

    </p>

    @for (int i = 0; i < Model.ProductList.Count(); i++)
    {
        <input type="hidden" asp-for=" @Model.ProductList[i].Id" />
        
        <p>
            Product Name: @Model.ProductList[i].Name
        </p>
        <p>
            Price: @Model.ProductList[i].Price
        </p>
    }
   
    <p>
        <button type="submit" class="btn btn-success form-control">Submit</button>
    </p>
</form>


@model Category

<h1 class="text-light">Edit Category</h1>

<form method="post">

    <!-- Передача скрытых данных -->
    <input asp-for="Id" hidden />

    <p>
        <label asp-for="Name" class="text-light"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </p>

    <p>
        <label asp-for="DisplayOrder" class="text-light"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </p>

    <p>
        <input type="submit" class="btn btn-success" value="Update" />
        <a class="btn btn-primary" asp-controller="Category" asp-action="Index"> Back </a>
    </p>

    <p>
        <div asp-validation-summary="All"></div>
    </p>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Category";
}

<h1 class="text-light">Hello Category!</h1>


<p>
    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Create Category
    </a>
</p>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="text-light">Category Name</th>
                <th class="text-light">Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%" class="text-light">@item.Name</td>
                    <td width="30%" class="text-light">@item.DisplayOrder</td>

                    <td width="20%">
                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit"
                   asp-route-Id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                            <!-- Edit -->
                        </a>

                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete"
                   asp-route-Id="@item.Id">
                            <i class="fa-solid fa-tresh"></i>
                            <!-- Delete -->
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



